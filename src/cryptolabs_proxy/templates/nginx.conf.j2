worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;
    sendfile on;
    keepalive_timeout 65;
    client_max_body_size 100M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;

    # Rate limiting
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;

    {% if letsencrypt %}
    # Redirect HTTP to HTTPS
    server {
        listen 80;
        server_name {{ domain }};
        
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }
        
        location / {
            return 301 https://$host$request_uri;
        }
    }

    server {
        listen 443 ssl http2;
        server_name {{ domain }};

        ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256;
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
    {% else %}
    server {
        listen 80;
        listen 443 ssl http2;
        server_name {{ domain }};

        ssl_certificate /etc/nginx/ssl/server.crt;
        ssl_certificate_key /etc/nginx/ssl/server.key;
        ssl_protocols TLSv1.2 TLSv1.3;
    {% endif %}

        # DNS resolver for Docker networks - CRITICAL for runtime resolution
        # This allows nginx to start even if backend services don't exist yet
        resolver 127.0.0.11 valid=10s ipv6=off;
        resolver_timeout 5s;

        # Security headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;

        # =====================================================
        # ERROR HANDLERS
        # =====================================================
        
        location @service_unavailable {
            default_type application/json;
            return 503 '{"error":"Service unavailable","message":"The requested service is not running. Install it or wait for it to start."}';
        }

        # =====================================================
        # AUTHENTICATION
        # =====================================================
        
        # Auth server endpoints (public)
        location /auth/ {
            proxy_pass http://127.0.0.1:8081/auth/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Internal auth verification endpoint (for auth_request)
        location = /_auth_check {
            internal;
            proxy_pass http://127.0.0.1:8081/auth/headers;
            proxy_pass_request_body off;
            proxy_set_header Content-Length "";
            proxy_set_header X-Original-URI $request_uri;
            proxy_set_header Cookie $http_cookie;
        }

        # =====================================================
        # Internal API (blocked from public access)
        # Only reachable via direct Docker network (172.30.0.10:8080)
        # =====================================================
        location /internal/ {
            return 403;
        }

        # =====================================================
        # PUBLIC ENDPOINTS (no auth required)
        # =====================================================
        
        # Health check API (always public)
        location /api/health {
            default_type application/json;
            return 200 '{"status":"ok","proxy":"running"}';
        }

        # Service health check (internal, no auth)
        location /api/services {
            proxy_pass http://127.0.0.1:8080/api/services;
            proxy_set_header Host $host;
        }

        # Static assets (no auth)
        location /static/ {
            root /usr/share/nginx/html;
        }

        # =====================================================
        # PROTECTED ENDPOINTS (auth required)
        # =====================================================
        
        # Fleet Management Landing Page (requires auth)
        location = / {
            auth_request /_auth_check;
            auth_request_set $auth_user $upstream_http_x_fleet_auth_user;
            auth_request_set $auth_role $upstream_http_x_fleet_auth_role;
            auth_request_set $auth_token $upstream_http_x_fleet_auth_token;
            
            # Redirect to login if not authenticated
            error_page 401 = @login_redirect;
            
            root /usr/share/nginx/html;
            index index.html;
        }

        location @login_redirect {
            return 302 /auth/login?next=$request_uri;
        }

        {% for name, service in services.items() %}
        {% if not service.path %}
        # {{ service.get('display_name', name) }} - external service, no local proxy route
        {% else %}
        # {{ service.get('display_name', name) }} - uses variable for runtime DNS resolution
        location {{ service.path }} {
            # Require authentication
            auth_request /_auth_check;
            auth_request_set $auth_user $upstream_http_x_fleet_auth_user;
            auth_request_set $auth_role $upstream_http_x_fleet_auth_role;
            auth_request_set $auth_token $upstream_http_x_fleet_auth_token;
            
            # Redirect to login if not authenticated
            error_page 401 = @login_redirect;
            
            {% if name == 'grafana' or service.container_name == 'grafana' %}
            # Map Fleet roles to Grafana roles (Admin, Editor, Viewer)
            set $grafana_role "Viewer";
            if ($auth_role = "admin") {
                set $grafana_role "Admin";
            }
            if ($auth_role = "readwrite") {
                set $grafana_role "Editor";
            }
            {% endif %}
            
            # Variable allows nginx to start even if service doesn't exist yet
            set $upstream_{{ name | replace('-', '_') }} http://{{ service.container_name }}:{{ service.port }};
            proxy_pass $upstream_{{ name | replace('-', '_') }}/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Script-Name {{ service.path.rstrip('/') }};
            
            # Forward authentication headers to backend services
            proxy_set_header X-Fleet-Auth-User $auth_user;
            proxy_set_header X-Fleet-Auth-Role $auth_role;
            proxy_set_header X-Fleet-Auth-Token $auth_token;
            proxy_set_header X-Fleet-Authenticated "true";
            
            {% if name == 'grafana' or service.container_name == 'grafana' %}
            # Grafana-specific: pass user and role for auto-login with correct permissions
            proxy_set_header X-WEBAUTH-USER $auth_user;
            proxy_set_header X-WEBAUTH-ROLE $grafana_role;
            {% endif %}
            
            proxy_read_timeout 300;
            proxy_connect_timeout 300;
            proxy_send_timeout 300;
            
            {% if name == 'grafana' or service.container_name == 'grafana' %}
            # Inject Fleet Management Home button into Grafana HTML
            # target="_top" prevents Grafana's SPA router from intercepting the click
            sub_filter '</head>' '<style>.fleet-home-bar{position:fixed;top:0;left:0;right:0;z-index:99999;background:#1a1a2e;border-bottom:1px solid #333;padding:4px 16px;display:flex;align-items:center;gap:10px;font-family:-apple-system,sans-serif;font-size:13px;height:28px;}.fleet-home-bar a{color:#00b4d8;text-decoration:none;border:1px solid #00b4d8;padding:3px 12px;border-radius:4px;font-size:12px;font-weight:500;transition:background 0.2s;}.fleet-home-bar a:hover{background:rgba(0,180,216,0.15);}.fleet-home-bar span{color:#666;}body{padding-top:36px !important;}</style></head>';
            sub_filter '</body>' '<div class="fleet-home-bar"><a href="/" target="_top">Home</a><span>|</span><span style="color:#888;">Grafana</span></div></body>';
            sub_filter_once on;
            sub_filter_types text/html;
            proxy_set_header Accept-Encoding "";
            {% elif name == 'prometheus' or service.container_name == 'prometheus' %}
            # Inject Fleet Management Home button into Prometheus HTML
            sub_filter '</head>' '<style>.fleet-home-bar{position:fixed;top:0;left:0;right:0;z-index:99999;background:#1a1a2e;border-bottom:1px solid #333;padding:4px 16px;display:flex;align-items:center;gap:10px;font-family:-apple-system,sans-serif;font-size:13px;height:28px;}.fleet-home-bar a{color:#00b4d8;text-decoration:none;border:1px solid #00b4d8;padding:3px 12px;border-radius:4px;font-size:12px;font-weight:500;transition:background 0.2s;}.fleet-home-bar a:hover{background:rgba(0,180,216,0.15);}.fleet-home-bar span{color:#666;}</style></head>';
            sub_filter '</body>' '<div class="fleet-home-bar"><a href="/">Home</a><span>|</span><span style="color:#888;">Prometheus</span></div></body>';
            sub_filter_once on;
            sub_filter_types text/html;
            proxy_set_header Accept-Encoding "";
            {% endif %}
            
            # Graceful error handling when service is unavailable
            proxy_intercept_errors on;
            error_page 502 503 504 = @service_unavailable;
        }

        {% endif %}
        {% endfor %}
        
        # Exporter management pages - served by auth server
        location /vastai/ {
            auth_request /_auth_check;
            auth_request_set $auth_user $upstream_http_x_fleet_auth_user;
            auth_request_set $auth_role $upstream_http_x_fleet_auth_role;
            error_page 401 = @login_redirect;
            proxy_pass http://127.0.0.1:8081/vastai/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        
        location /runpod/ {
            auth_request /_auth_check;
            auth_request_set $auth_user $upstream_http_x_fleet_auth_user;
            auth_request_set $auth_role $upstream_http_x_fleet_auth_role;
            error_page 401 = @login_redirect;
            proxy_pass http://127.0.0.1:8081/runpod/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        
        # Exporter API proxies - for management pages to call exporter JSON APIs
        location /vastai-api/ {
            auth_request /_auth_check;
            error_page 401 = @login_redirect;
            set $upstream_vastai http://vastai-exporter:8622;
            proxy_pass $upstream_vastai/api/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_intercept_errors on;
            error_page 502 503 504 = @service_unavailable;
        }
        
        location /runpod-api/ {
            auth_request /_auth_check;
            error_page 401 = @login_redirect;
            set $upstream_runpod http://runpod-exporter:8623;
            proxy_pass $upstream_runpod/api/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_intercept_errors on;
            error_page 502 503 504 = @service_unavailable;
        }
        
        # Default: show landing page
        location / {
            root /usr/share/nginx/html;
            try_files $uri $uri/ /index.html;
        }
    }
}
